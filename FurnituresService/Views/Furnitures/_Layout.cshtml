<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FurnituresService.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark a-background-color border-bottom box-shadow mb-3">
            <div class="container-fluid p-3">
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link a-text-color fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Back to MainPage</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>    
    </header>
                        
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <h4 class="a-text-color2 fw-bold text-center">Admin Dashboard</h4>
                <hr />
                <p class="a-text-color2 text-center">Furnitures</p>
                <ul class="nav nav-pills flex-column justify-content-center text-center p-4 a-field-color">
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Furnitures" asp-action="Show">Show</a></li>
                    <hr />
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Furnitures" asp-action="Insert">Insert</a></li>
                </ul>
                <br />
                <p class="a-text-color2 text-center">Users</p>
                <ul class="nav nav-pills flex-column justify-content-center text-center p-4 a-field-color">
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Users" asp-action="Show">Show</a></li>
                    <hr />
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Users" asp-action="Insert">Insert</a></li>
                </ul>
                <br />
                <p class="a-text-color2 text-center">Categories</p>
                <ul class="nav nav-pills flex-column justify-content-center text-center p-4 a-field-color">
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Categories" asp-action="Show">Show</a></li>
                    <hr />
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Categories" asp-action="Insert">Insert</a></li>
                </ul>
                <br />
                <p class="a-text-color2 text-center">Orders</p>
                <ul class="nav nav-pills flex-column justify-content-center text-center p-4 a-field-color">
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Orders" asp-action="Show">Show</a></li>
                    <hr />
                    <li class="nav-item"><a class="a-text-color fw-bold text-decoration-none" asp-controller="Orders" asp-action="Insert">Insert</a></li>
                </ul>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="border-top footer a-text-color a-background-color pt-3">
        <div class="container">&copy; 2023 - FurnituresService</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
