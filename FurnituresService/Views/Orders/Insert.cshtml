@model FurnituresServiceModels.Models.Order

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Views/Furnitures/_Layout.cshtml";
}

<h1>Insert</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Insert" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@(ViewData["Users"] as SelectList)"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderFurnitures" class="control-label"></label>
                <select asp-for="OrderFurnitures" class="form-control" asp-items="@(ViewData["Furnitures"] as SelectList)" multiple></select>
                <span asp-validation-for="OrderFurnitures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Insert" class="btn a-text-color a-field-color" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Show">Back to List</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
