@using Microsoft.AspNetCore.Identity
@model FurnituresService.Models.Order
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "UserOrdersDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentUser = UserManager.Users.FirstOrDefault(u => u.Email == User.Identity.Name);
}

<div>
    <h4>Order - @Model.Id</h4>
    <hr />
    <table>
        <tr class="row">
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </td>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </td>
            <th class="col-sm-2">
                Furnitures
            </th>
            <td class="col-sm-10">
                <select asp-for="OrderFurnitures" class="form-control w-50" asp-items="@(ViewData["Furnitures"] as SelectList)" multiple disabled></select>
            </td>
            <th>
                Price
            </th>
            <td>
                <p>@ViewData["SumPrice"]</p>
            </td>
        </tr>
    </table>
</div>
<div>
    <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="UserOrdersShow" asp-route-customerId="@currentUser.Id">Back to List</a></button>
</div>
