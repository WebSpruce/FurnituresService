@model IEnumerable<FurnituresService.Models.Order>

@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Furnitures/_Layout.cshtml";
}

<h4 class="a-text-color2 fw-bold text-start">Show Orders</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Update" asp-route-id="@item.Id">Edit</a></button> 
                <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Details" asp-route-id="@item.Id">Details</a></button> 
                <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
