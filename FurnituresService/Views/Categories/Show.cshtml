@model IEnumerable<FurnituresService.Models.Category>

@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Furnitures/_Layout.cshtml";
}

<h4 class="a-text-color2 fw-bold text-start">Show Categories</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Update" asp-route-id="@item.Id">Edit</a></button>
                <button type="button" class="btn a-text-color a-field-color"><a class="text-decoration-none a-text-color" asp-action="Delete" asp-route-id="@item.Id" method="post">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
